@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    @Html.HiddenFor(x => x.ContactID)
                    <label for="Title">Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="Name" disabled="disabled">
                </div>
                <div class="form-group">
                    <label for="Title">Mail Adresi</label>
                    <input type="text" class="form-control" asp-for="Mail" disabled="disabled">
                </div>
                <div class="form-group">
                    <label for="Title">Tarih</label>
                    <input type="text" class="form-control" asp-for="Date" disabled="disabled">
                </div>
                <div class="form-group">
                    <label for="Title">Mesaj Detayı</label>
                    <textarea class="form-control" cols="5" rows="10" asp-for="Message" disabled="disabled"></textarea>
                </div>

                <a href="/Contact/Index" class="btn btn-outline-primary">Mesaj Listesi</a>
            </form>
        </div>
    </div>
</div>

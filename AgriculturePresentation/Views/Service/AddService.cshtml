@model AgriculturePresentation.Models.ServiceAddViewModel

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Hizmet Kaydı</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Image">Görsel</label>
                    <input type="text" class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-success me-3">Değişiklikleri Kaydet</button>
                <a href="/Service/Index" class="btn btn-outline-primary">Hizmet Listesi</a>
            </form>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th class="text-center">Düzenle</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Aktif/Pasif</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-outline-info d-block">Güncelle</a></td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger d-block">Sil</a></td>
                                <td><a onclick="openInfoPopup()" href="/Announcement/AnnouncementChangeStatus/@item.AnnouncementID" class="btn btn-primary d-block">Aktif/Pasif Yap</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Announcement/AddAnnouncement" class="btn btn-success mt-4 d-block btn-lg">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>

<script>
    function openInfoPopup() {
        // Bilgi penceresini açmak için bir JavaScript fonksiyonu
        alert("Bu bir bilgi penceresidir.");
        return false; // Butonun varsayılan davranışını önlemek için false döndürün
    }
</script>